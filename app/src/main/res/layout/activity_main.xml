<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dark_grey_gradient"
    tools:context=".ui.MainActivity">

    <com.gigamole.infinitecycleviewpager.VerticalViewPager
        android:id="@+id/dateViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:icvp_center_page_scale_offset="0dp"
        app:icvp_max_page_scale="0.9"
        app:icvp_medium_scaled="true"
        app:icvp_min_page_scale="0.7"
        app:icvp_min_page_scale_offset="-20dp"
        app:icvp_scroll_duration="600"
        app:icvp_interpolator="@android:anim/fade_in" />

    <ProgressBar
        android:id="@+id/loadingCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</FrameLayout>
